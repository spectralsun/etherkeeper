{% if user and user.id %}
  <a href="/home" class="btn btn-success" id="go_home"><span class="glyphicon glyphicon-hdd"></span></a>
  <ul class="nav navbar-nav">
     <li class="dropdown">
        <a class="dropdown-toggle" data-toggle="dropdown">
          {{ user.username }} <b class="caret"></b>
        </a>
        <ul class="dropdown-menu">
          <li><a class="/logout">Logout</a></li>
        </ul>
      </li>
  </ul>
{% else %}
  <button class="btn btn-success" data-toggle="modal" data-target="#login_modal">Sign in</button>
{% endif %}